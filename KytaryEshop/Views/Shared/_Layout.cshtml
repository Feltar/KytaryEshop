@using KytaryEshop.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@inject UserManager<UzivatelIdentita> _userManager;
@inject SignInManager<UzivatelIdentita> _signInManager;
@{
    var uzivatel = _signInManager.IsSignedIn(User);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kytary</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kytary.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <link rel="stylesheet" href="/CssSoubory/stylesheet.css"/>
    <link rel="stylesheet" href="/CssSoubory/karta.css">
    <link rel="stylesheet" href="~/CssSoubory/anulaceStylovaniOdkazu.css">



    
    <script src="~/js/site.js"> </script> 	
    <script src="~/lib/jquery/dist/jquery.min.js"> </script> 	
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"> </script> 	


</head>
<body>
    <header>
          <div class="logo_konteiner">
                    <a href=@Url.Action("StrankaVsechnyArtikly","Artikly", new{KolikataPolozka = 1}) class="logo"> Kytary Sekerka</a>
          </div>
          <div class = "menu_konteiner">
              <ul>
                <li>
                    <a href= @Url.Action("StrankaElektrickeKytary","Artikly", new{KolikataPolozka = 1})> Elektrické kytary </a>
                    <a href=@Url.Action("StrankaAkustickeKytary","Artikly", new{KolikataPolozka = 1})> Akustické kytary </a>
                    <a href=@Url.Action("StrankaBaskytary","Artikly", new{KolikataPolozka = 1})> Baskytary </a>
                    <a href="#"> Příslušenství </a>
                </li>
              </ul>
          </div>





          <div class="prihlasenAVyhledavani">
            @if (_signInManager.IsSignedIn(User))
            {
                <a href=@Url.Action("ZobrazKosik","Kosik", new{KolikataPolozka = 1}) > kosik </a>
                <a href=@Url.Action("ZobrazHistoriiObjednavek","Uzivatel")> @User.Identity.Name </a>
                <a href="@Url.Action("Odhlaseni","Uzivatel")"> odhlaseni </a>
            }
            else{
                <a href=@Url.Action("Prihlaseni","Uzivatel")> prihlaseni </a>
                <a href="@Url.Action("Registrace","Uzivatel")"> registrace </a>
            }
          </div>








    </header>
    <main>
                @RenderBody()
    </main>

    <div style="height:80px;"> </div>
    <footer class="border-top footer text-muted" style = "height:70px;">
        <div class="container">
            &copy; 2022 - Kytary - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
         </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
